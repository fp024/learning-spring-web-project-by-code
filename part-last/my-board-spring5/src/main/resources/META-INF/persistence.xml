<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--
    https://docs.jboss.org/hibernate/orm/5.6/userguide/html_single/Hibernate_User_Guide.html
-->
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
		                             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

  <persistence-unit name="my_board" transaction-type="RESOURCE_LOCAL">
    <!-- 로컬 트랜젝션: Java Connection을 이용해 트랜젝션 처리 -->
    <properties>
      <!-- 로그나 콘솔에 SQL을 이쁘게 출력 -->
      <property name="hibernate.format_sql" value="true"/>

      <property name="hibernate.hbm2ddl.charset_name"
        value="UTF-8"/>

      <property name="javax.persistence.schema-generation.database.action"
        value="drop-and-create"/>

      <property name="javax.persistence.schema-generation.drop-source" value="script"/>
      <property name="javax.persistence.schema-generation.drop-script-source"
        value="sql/hsqldb/init-drop-ddl.sql"/>

      <property name="javax.persistence.schema-generation.create-source"
        value="script"/>
      <property name="javax.persistence.schema-generation.create-script-source"
        value="sql/hsqldb/init-create-ddl.sql"/>

      <property name="javax.persistence.sql-load-script-source"
        value="sql/hsqldb/init-data-insert.sql"/>

      <property name="hibernate.hbm2ddl.import_files_sql_extractor"
        value="org.hibernate.tool.hbm2ddl.MultipleLinesSqlCommandExtractor"/>

      <property name="hibernate.physical_naming_strategy"
        value="org.hibernate.boot.model.naming.CamelCaseToUnderscoresNamingStrategy"/>

    </properties>
  </persistence-unit>
</persistence>